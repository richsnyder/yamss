<?xml version="1.0"?>

<!-- --------------------------------------------------------------- -->
<!--                                                                 -->
<!-- Driven Harmonic Oscillator                                      -->
<!--                                                                 -->
<!-- q'' + .1 q' + q = sin(t)                                        -->
<!--                                                                 -->
<!-- q(0) = 1,   q'(0) = 0                                           -->
<!--                                                                 -->
<!-- Author: Rich Snyder                                             -->
<!--                                                                 -->
<!-- --------------------------------------------------------------- -->

<yamss>

  <structure>
    <nodes>
      <node><id>1</id></node>
    </nodes>
  </structure>

  <modes>
    <mode>
      <nodes>
        <node><id>1</id><x>1.0</x></node>
      </nodes>
    </mode>
  </modes>

  <eom>
    <matrices>
      <damping>0.1</damping>
    </matrices>
    <initial_conditions>
      <displacement>1.0</displacement>
    </initial_conditions>
  </eom>

  <loads>
    <load>
      <id>1</id>
      <type>lua</type>
      <parameters>
        <expressions>
          <x>math.sin(t)</x>
        </expressions>
      </parameters>
      <nodes>
        <node>1</node>
      </nodes>
    </load>
  </loads>

  <solution>
    <time>
      <span>25.13</span>
    </time>
  </solution>

  <outputs>
    <output>
      <type>tecplot</type>
      <parameters />
    </output>
  </outputs>

</yamss>
